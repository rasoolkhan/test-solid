#page-signup {
  background: #f6f6f6;

  .signup-banner {
    position: relative;
    z-index: -1;

    img {
      position: absolute;
      top: 0;
      width: 100%;
    }
  }

  .signup-content {
     form {
       max-width: 800px;
       margin: 171 / 1680 * 100% auto 54px auto;
       background-color: white;

       h1 {
         color: rgb(38, 38, 38);
         text-align: center;
         padding: 55px 0 35px 0;
         font-size: 26 / 16 * 1em;
       }

       h4 {
         color: rgb(38, 38, 38);
         text-align: center;
         line-height: 1.2;
         padding: 0 88px;
         margin-bottom: 48px;

         font: {
           size: 14 / 16 * 1em;
           weight: 400;
         }

         &.form-description-last {
           padding-bottom: 45px;
         }
       }

       h5 {
         color: rgb(38, 38, 38);
         text-align: center;
         margin-bottom: 30px;

         font: {
           family: Georgia;
           size: 18 / 18 * 1em;
           weight: bold;
         }
       }

       h6 {
         margin-bottom: 22px;
         color: rgb(102, 102, 102);

         font: {
           family: Georgia;
           size: 14 / 18 * 1em;
           weight: normal;
         }
       }

       &.form-wide {
         width: 95%;

         figure {
           padding-top: 55px;
           text-align: center;
         }

          h1 {
            padding: 42px 10% 55px 10%;
            line-height: 1.4;
	    text-align: center;

            font: {
              size: 32 / 16 * 1em;
              weight: 400;
            }
          }
	  
	  .startastore-availability{
		color: #e96262;
		text-align: center;
		margin-top: 80px;
		font-family: Georgia;
		display: none;
    		padding: 0px 8%;
	   }

          .spacer-red {
              width: 144px;
              margin: 0 auto 59px auto;
              border-bottom: 1px solid #e96161;
          }

          .title-startastore {
            color: rgb(38, 38, 38);
            text-transform: uppercase;
            text-align: center;
            margin-bottom: 21px;

            font: {
              family: "futura-pt";
              size: 24 / 16 * 1em;
              weight: 400;
            }
          }

          p {
            color: rgb(153, 153, 153);
            max-width: 658px;
	       width: 100%;
            margin: 0 auto 83px auto;
            line-height: 1.5;
            text-align: center;

            font: {
              family: Georgia;
              size: 14 / 18 * 1em;
              weight: normal;
            }
          }

          .diagram {
            text-align: center;
            margin-bottom: 83px;
	    padding: 0px 10px;
	    min-height: 100% !important;

            img {
              display: inline-block;
		width: 100%;
		height: 100%;
            }
          }

          .signup-whyjoin {
            padding: 106px 0 102px 0;
            background-color: #ddd;

            .signup-whyjoin-content {
              max-width: 577px;
              margin: 0 auto;
		width: 100%;

              ul {
                display: inline-block;
                text-align: center;

                &:last-child {
                  float: right;
                }

                li {
                  color: rgb(38, 38, 38);
                  line-height: 1.5;

                  font: {
                    family: Georgia;
                    size: 14 / 18 * 1em;
                    weight: normal;
                  }
                }
              }
            }
          }
       }

       .learn-more {
         padding: 0 7% 28px 7%;
	 text-align: center;

         h1 {
           padding-left: 0;
           padding-right: 0;
           padding-bottom: 20px;
         }

         h2 {
           color: rgb(38, 38, 38);
           text-align: left;
           text-transform: none;
           margin-bottom: 7px;

           font: {
             family: Georgia;
             size: 19 / 18 * 1em;
             weight: bold;
             style: normal;
           }
         }

         p {
           color: rgb(102, 102, 102);
           line-height: 1.3;
         }

         .learn-more-content {
           display: block;
           width: 100%;
           text-align: center;

           p {
             text-align: justify;
             margin: 0 0 37px 0;
             width: 100%;
           }

           h2 {
             margin-top: 15px;
           }
             .learn-more-content-item{
                width: 45%;
                display: inline-block;
                vertical-align: top;
                 
                 &:nth-child(even){ margin-left: 15px; }
                 &:nth-child(odd){ margin-right: 15px; }
                 &:last-child{ margin-right: calc(46% + 28px); }
             }
             .toolkit-last{ margin-right: 0 !important; }
         }

         .learn-more-content-right {
           float: right;
         }
       }

       .form-howitworks-signedin {
         width: 384px;

         h4 {
           color: rgb(38, 38, 38);
           text-align: left;
           padding: 0;
           margin: 47px 0 14px 0;

           font: {
             family: "futura-pt";
             size: 22 / 16 * 1em;
             weight: 500;
           }
         }

         p {
           text-align: left;
           width: 100%;
           margin-bottom: 57px;
         }

         a {
           background: #e96161;
           border: none;
           text-transform: uppercase;
           color: white;
           padding: 12px 16px;
           display: inline-block;
           margin-bottom: 18px;

           font: {
             family: "futura-pt";
             size: 15 / 16 * 1em;
             weight: 500;
           }
         }
       }

       .spacer-grey {
         height: 69px;
         background: #f6f6f6;
       }

       .extend-toolkit {
            padding-left: 7%;
	    padding-right: 7%;
	    text-align: left;
       }
    }

    .signup-static:last-child {
      margin-bottom: 136px;
      padding: 37px 0;
    }
    
    }

  .signup-static {
    max-width: 800px;
    width: 100%;
    margin: 0 auto;
    background-color: white;
    padding: 52px 72px 39px 72px;

    h3 {
      text-transform: uppercase;
      text-align: center;
      margin-bottom: 26px;

      font: {
        size: 20 / 16 * 1em;
        weight: 400;
      }

      i {
        color: #e96161;
      }

      span {
        text-transform: none;

        font: {
          family: Georgia;
          weight: bold;
          style: italic;
          size: 20px;
        }
      }
    }

    p {
      color: rgb(51, 51, 51);
      line-height: 1.357;

      font: {
        family: "Georgia";
        size: 14 / 18 * 1em;
        weight: normal;
      }
    }

    .signup-static-button {
      text-align: center;

      a {
        color: rgb(233, 98, 98);
        text-transform: uppercase;
        font-size: 14 / 16 * 1em;;
        border: 1px solid rgb(233, 98, 98);
        padding: 15px 60px;
      }
    }
  }
}

.form-fields {
  padding: 0 88px 65px 88px;

  h2 {
    color: rgb(102, 102, 102);
    margin-bottom: 34px;

    font: {
      family: Georgia;
      size: 18 / 18 * 1em;
      weight: bold;
    }
  }

  .form-field {
    margin-bottom: 23px;

    font: {
      family: Georgia;
      weight: normal;
    }

    label {
      display: block;
      color: rgb(153, 153, 153);
      margin-bottom: 11px;
      font-size: 14 / 18 * 1em;
    }

    input, select, textarea {
      color: rgb(51, 51, 51);
      border: 1px solid rgb(192, 192, 192);
      padding: 16px 0 15px 13px;
      box-sizing: border-box;

      font: {
        family: "futura-pt";
        size: 14 / 16 * 1em;
        weight: 400;
      }
    }

    input, textarea {
      /*max-width: 612px;*/
      width: 100%;
    }

    select {
      background: transparent;
      -webkit-appearance: none;
      border-radius: 0;
      width: 100%;
    }

    textarea {
      height: 63px;
      resize: none;
    }
  }

  .form-field-select {
    background: url(<%= asset_path 'spree/frontend/select-arrow.png' %>) no-repeat bottom right;
  }

  .form-field-short {
    display: inline-block;
    width: calc(50% - 3px);
    /*margin-right: 4%;
    max-width: 293px;*/

    &:nth-of-type(2n) {
      /*margin-left: -5px;
      margin-right: 0;*/
    }

    &.stores-new-slug {
      width: 100%;
      max-width: 550px;

      p {
        display: inline-block;
        margin-left: 9px;

        font: {
          family: 'futura-pt';
          size: 14 / 16 * 1em;
          weight: 400;
        }
      }
      
        input{ max-width: 350px; }
    }

    input {
      /*max-width: 286px;*/
      width: 100%;
      box-sizing: border-box;
    }
  }

  .form-field-checkboxes {
    .form-field-checkbox {
      float: left;
      width: 166px;

      &:nth-child(2n) {
        clear: left;
      }

      label {
        display: inline-block;
        width: auto;

        .form-field-checkbox-button {
          display: inline-block;
          width: 20px;
          height: 20px;
          border: 1px solid #c0c0c0;
          background: transparent;
        }

        .form-field-checkbox-text {
          display: inline-block;
          vertical-align: top;
          margin: 3px 0 0 10px;
          color: rgb(51, 51, 51);

          font: {
            family: "futura-pt";
            size: 15px;
            weight: 400;
          }
        }
      }

      input[type="checkbox"]:checked + label .form-field-checkbox-button {
        background: #e96161;
      }
    }
  }

  .form-field-file {
    .form-field-file-button {
      display: inline-block;
      width: 229px;
      border: 1px solid #e96161;
      vertical-align: middle;
      text-align: center;
      text-transform: uppercase;
      color: rgb(233, 97, 97);
      padding: 14px 0 13px 0;

      font: {
        family: "futura-pt";
        size: 15px;
        weight: 400;
      }
    }

    .form-field-file-text {
      display: inline-block;
      color: rgb(153, 153, 153);
      font-size: 14 / 18 * 1em;
      vertical-align: top;
      margin: 14px 0 0 19px;
    }

    .form-field-file-preview {
      width: 229px;
      height: 210px;
      border: 1px solid #e96161;
      text-align: center;

      background: {
        size: cover;
        color: #f4f4f4;
      }

      .form-field-file-preview-blank {
        display: inline-block;
        color: rgb(102, 102, 102);
        width: 101px;
        margin-top: 60px;

        font: {
          family: Georgia;
          size: 12px;
        }

        p {
          margin-top: 14px;
          line-height: 1.4;
        }
      }
    }
  }

  .form-field-product {
    .form-field-file {
      display: inline-block;

      .form-field-file-button {
        margin-top: 12px;
      }
    }

    .form-field-product-content {
      display: inline-block;
      vertical-align: top;
      margin-left: 17px;

      input {
        width: 358px;
        margin-bottom: 16px;
      }
    }
  }

  input[type="checkbox"] {
    width: auto;
    display: none;
  }

  input[type="file"] {
    width: 0.1px;
  	height: 0.1px;
  	opacity: 0;
  	overflow: hidden;
  	position: absolute;
  	z-index: -1;
  }

  input[type="submit"] {
    background: #e96161;
    border: none;
    text-transform: uppercase;
    color: white;
    padding: 12px 69px;
    margin-top: 10px;

    font: {
      family: "futura-pt";
      size: 15 / 16 * 1em;
      weight: 500;
    }
  }

  .link-password-forgot {
    display: block;
    color: rgb(233, 97, 97);
    margin: -8px 0 22px 0;

    font: {
      family: Georgia;
      size: 14 / 18 * 100%;
      style: italic;
      weight: normal;
    }
  }

  .link-password-signup {
    color: rgb(102, 102, 102);
    margin-top: 17px;

    font: {
      family: Georgia;
      size: 14 / 16 * 100%;
      weight: normal;
    }

    a {
      color: rgb(233, 97, 97);
      font-weight: bold;
    }
  }
}

.form-info-button {
  display: inline-block;
  width: 207px;
  border: 1px solid #e96161;
  vertical-align: middle;
  text-align: center;
  text-transform: uppercase;
  color: rgb(233, 97, 97);
  padding: 14px 0 13px 0;
  margin-top: 25px;

  font: {
    family: "futura-pt";
    size: 15px;
    weight: 400;
  }
}

.form-fields-howitworks, .form-wide .diagram {
  padding: 46px 7% 54px 7%;
  position: relative;
  min-height: 558px;

  .form-howitworks-carousel {
    position: absolute;
    bottom: 10%;
    left: 7%;
    width: 225px;
  }
  
 

  .form-fields {
    width: 60%;
    padding: 0;
    float: right;

    .form-field {
      width: 100%;

      input {
        width: 100%;
      }
    }

    .form-field-short {
      width: calc(50% - 3px);

      input {
        width: 100%;
      }
    }

    .form-field-short:nth-child(2n) {
      margin-left: 0%;
    }
  }
}

.signup-static-image {
  text-align: center;

	.static-img-container{
	  margin: 0 auto;
	  width: 100%;
	  max-width: 880px;
	  background-image: url(<%= asset_path 'spree/frontend/Login_banner.png' %>);
	  background-repeat: no-repeat;
	  background-position: center center;
	  background-size: 938px 703px;

		.content{
		  text-align: center;
		  width: calc(100% / 3 - 5px);
		  display: inline-block;
		  height: 100%;
		  margin: 20px 0;
		}
		.content span{ display: block; color: #fff; padding:12px 0; }
		.content span:first-child{ font-size: 4em; }
		.content span:nth-child(2){ text-transform: uppercase;  }
		.content span:nth-child(3){ border: 1px solid #fff; width:75px; margin: 0 auto; padding:0; }
		.content span:last-child{ text-transform: lowercase; font-size: 0.8em; font-family: Georgia; font-style: italic;}	

	}

}


.form-spacer {
  margin: 55px 0 40px 0;
  border-bottom: 1px solid #d6d6d6;
}

.form-spacer-short {
  margin-top: 0;
}

.signup-facebook {
  color: white;

  i {
    display: inline-block;
    padding: 13px 18px;
    margin-right: -5px;
    background-color: #49639f;
    font-size: 24 / 18 * 1em;
  }

  span {
    display: inline-block;
    padding: 16px 25px 14px 25px;
    background-color: #6881bb;

    font: {
      family: 'futura-pt';
      weight: 500;
      size: 18 / 16 * 1em;
    }
  }
}

.login-spacer {
  margin: 30px 0 29px 0;
  border-bottom: 1px solid #d6d6d6;

}



