.signup-content {
     form {
       width: 100% !important;
     }
}

.form-fields .link-password-signup {
  text-align: center;
}

.form-fields{
	padding: 0px 10% 65px 10% !important;
}

.loginButton{
	text-align: center;
}

#page-signup .signup-static{
	text-align: center;
    padding-left: 10%;
    padding-right: 10%;
}

.fb-signup-container{
	width: 100%;
	text-align: center !important;
}

