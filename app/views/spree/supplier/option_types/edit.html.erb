<% self.title = "Natty : #{@store.name} : Variant Types" %>
<% content_for :dashboard do %>
  <%= render 'spree/shared/error_messages', target: @product %>
  <div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
      <div class="col-lg-12">
        <div class="text-center m-t-lg">
          <h2>Variant Types</h2>
          <div class="row">
            <div class="col-lg-12">
              <div class="ibox float-e-margins">
                <div class="ibox-title">
                  <h5>Edit Variant Type</h5>
                  <div class="ibox-tools">
                    <a class="collapse-link">
                      <i class="fa fa-chevron-up"></i>
                    </a>
                  </div>
                </div>
                <div class="ibox-content">
                  <div class="row">
                    <%= form_for [:supplier, @store, @option_type], html: {multipart: true, role: 'form', class: 'form-horizontal option_type_form'} do |f| %>
                      <div class="form-group">
                        <%= f.label :name, Spree.t(:name), class: 'col-sm-2 control-label'%>
                        <div class="col-sm-10">
                          <%= f.text_field :name, class: 'form-control' %>
                        </div>
                        <%= f.error_message_on :name %>
                      </div>
                      <div class="form-group">
                        <%= label_tag 'option_values', 'Values', class: 'col-sm-2 control-label'%>
                        <div class="col-sm-10">
                          <%= text_field_tag 'option_values', @option_type.option_values.pluck(:name).join(', '), class: 'form-control' %>
                        </div>
                        <%= f.error_message_on :name %>
                      </div>
                      <div class="form-group">
                        <button class="btn btn-sm btn-primary pull-right right-buttonm m-t-n-xs" type="submit"><strong>Update</strong></button>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= render template: "spree/supplier/layouts/dashboard" %>
