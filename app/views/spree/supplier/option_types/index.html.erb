<% self.title = "Natty : #{@store.name} : Variant Types" %>
<% content_for :dashboard do %>
  <%= render 'spree/shared/error_messages', target: @product %>
  <div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
      <div class="col-lg-12">
        <div class="text-center m-t-lg">
          <h2>Variant Types</h2>
        <div class="row">
          <div class="col-lg-12">
            <div class="ibox float-e-margins">
              <div class="ibox-title">
                <h5>All Variant Types</h5>
                <div class="ibox-tools">
                  <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                  </a>
                </div>
              </div>
              <div class="ibox-content">
                <table class="table table-striped table-bordered table-hover table-dynamic">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Edit</th>
                      <th>Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @option_types.each do |option_type| %>
                      <tr>
                        <td><%= option_type.name %></td>
                        <td><%= link_to fa_icon('edit'), edit_supplier_store_option_type_path(@store, option_type) %></td>
                        <td><%= link_to fa_icon('trash'), supplier_store_option_type_path(@store, option_type), method: :delete, data: { confirm: "Are you sure you want to delete this variant type?" } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= render template: "spree/supplier/layouts/dashboard" %>
