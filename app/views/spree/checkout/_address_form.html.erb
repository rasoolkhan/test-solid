<% address_id = address_type.chars.first %>
<div class="inner form-fields">
  <div class="field form-field form-field-short" id=<%="#{address_id}firstname" %>>
    <%= form.label :firstname, Spree.t(:first_name) %>
    <%= form.text_field :firstname %>
  </div>
  <div class="field form-field form-field-short" id=<%="#{address_id}lastname" %>>
    <%= form.label :lastname, Spree.t(:last_name) %>
    <%= form.text_field :lastname %>
  </div>
  <div class="field form-field" id=<%="#{address_id}address1" %>>
    <%= form.label :address1, 'Address Line 1' %>
    <%= form.text_field :address1 %>
  </div>
  <div class="field form-field" id=<%="#{address_id}address2" %>>
    <%= form.label :address2, 'Address Line 2' %>
    <%= form.text_field :address2 %>
  </div>
  <div class="field form-field form-field-short" id=<%="#{address_id}city" %>>
    <%= form.label :city, Spree.t(:city) %>
    <%= form.text_field :city %>
  </div>
  <div class="field form-field form-field-select" id=<%="#{address_id}state" %>>
    <%= form.label :state_id, Spree.t(:state) %>
    <%= form.collection_select :state_id, form.object.country.states.sort, :id, :name %>
  </div>
  <p class="field form-field form-field-short" id=<%="#{address_id}zipcode" %>>
    <%= form.label :zipcode, 'Pin Code' %>
    <%= form.text_field :zipcode %>
  </p>
  <div class="field form-field form-field-select" id=<%="#{address_id}country" %>>
    <%= form.label :country_id, Spree.t(:country) %>
    <%= form.collection_select :country_id, available_countries, :id, :name, {}, {:class => 'required'} %>
  </div>
  <div class="field form-field form-field-short" id=<%="#{address_id}phone" %>>
    <%= form.label :phone, Spree.t(:phone) %>
    <%= form.phone_field :phone %>
  </div>
</div>
